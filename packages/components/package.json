{
  "name": "@toktik/components",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Alfin Surya",
  "module": "./dist/components.es.js",
  "main": "./dist/components.umd.js",
  "exports": {
    ".": {
      "import": "./dist/components.es.js",
      "require": "./dist/my-component-lib.umd.js"
    },
    "./*": "./*"
  },
  "types": "./dist/types/index.d.ts",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist/ && pnpm build-only && vue-tsc --emitDeclarationOnly",
    "build-only": "vite build",
    "build:wc": "vite build --config vite.config.wc.js && vue-tsc --emitDeclarationOnly",
    "build:watch": "vite build --watch",
    "build:types": "vue-tsc --emitDeclarationOnly",
    "type-check": "vue-tsc -p tsconfig.json --emitDeclarationOnly",
    "lint": "eslint --ext .ts,.vue src/"
  },
  "dependencies": {
    "@videojs-player/vue": "^1.0.0",
    "clsx": "^2.1.1",
    "sass": "^1.52.1",
    "video.js": "^8.19.1",
    "vue": "^3.2.36"
  },
  "peerDependencies": {
    "vue": "3.2.36"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.3.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.16.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^4.7.2",
    "unplugin-vue-components": "^0.19.6",
    "unplugin-vue-define-options": "^1.5.2",
    "vite": "^2.9.9",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.3.0",
    "vue-eslint-parser": "^9.0.2",
    "vue-tsc": "^0.34.16"
  }
}
